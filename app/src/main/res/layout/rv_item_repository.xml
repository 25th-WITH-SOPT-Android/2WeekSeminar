<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ctnRvItem"
    android:layout_width="match_parent"
    android:layout_height="150dp">

    <TextView
        android:id="@+id/txtRvItemName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="26dp"
        android:layout_marginEnd="24dp"
        android:text="SoptStagram"
        android:textSize="23sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtRvItemDescription"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="IT 창업 동아리 SOPT 안드로이드 교육 프로젝트"
        app:layout_constraintEnd_toEndOf="@+id/txtRvItemName"
        app:layout_constraintStart_toStartOf="@+id/txtRvItemName"
        app:layout_constraintTop_toBottomOf="@+id/txtRvItemName" />

    <TextView
        android:id="@+id/txtRvItemLanguage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="6dp"
        android:text="Kotlin"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/imgRvItemLanguageColor"
        app:layout_constraintStart_toEndOf="@+id/imgRvItemLanguageColor"
        app:layout_constraintTop_toTopOf="@+id/imgRvItemLanguageColor" />

    <ImageView
        android:id="@+id/imgRvItemLanguageColor"
        android:layout_width="13dp"
        android:layout_height="13dp"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:srcCompat="#f84f51" />
</androidx.constraintlayout.widget.ConstraintLayout>